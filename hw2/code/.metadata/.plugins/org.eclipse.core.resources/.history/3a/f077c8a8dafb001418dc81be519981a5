package il.ac.technion.cs.sd.lib.clientserver;

import il.ac.technion.cs.sd.msg.Messenger;

/* Represents a task a server performs repeatedly - each time new data is sent 
 * from any client.*/
@FunctionalInterface
public interface ServerTask {
	
	/* @param serverName The name of server processing this task.
	 * @param data The data that the client sent to the server. */
	MessageData run(String serverName, MessageData data);
}
